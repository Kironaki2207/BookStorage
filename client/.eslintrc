{
    "root": true,
    "plugins": [
        "react",
        "prettier",
        "sonarjs"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:prettier/recommended",
        "plugin:sonarjs/recommended"
    ],
    "env": {
        "browser": true,
        "node": true,
        "es2021": true,
        "jest": true
    },
    "parserOptions": {
        "ecmaVersion": 2021,
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "rules": {
        "prettier/prettier": "error",
        "react/prop-types": 0,
        "no-empty": 0,
        "react/react-in-jsx-scope": "off"
    }
}